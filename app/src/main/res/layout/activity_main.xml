<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.charu.alarmc.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Fill the details :"
        android:layout_marginBottom="30dp"
        android:textSize="35sp"
        android:textStyle="bold"
        />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:id="@+id/linearLayout2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/name"
            android:id="@+id/textViewName"
            android:textStyle="bold"
            android:padding="10sp"
            android:layout_gravity="center_horizontal|top" />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/editTextName"
            android:ems="20"
            android:hint="ex : charuhas"
            android:layout_marginLeft="13dp"
            android:layout_gravity="center_horizontal|top" />
    </LinearLayout>


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:id="@+id/linearLayout4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/email"
            android:id="@+id/textViewemail"
            android:textStyle="bold"
            android:padding="10sp"
            android:layout_gravity="center_horizontal|top" />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ex : abc@gmail.com"
            android:inputType="textEmailAddress"
            android:id="@+id/editTextEmail"
            android:layout_marginLeft="15dp"

            android:layout_gravity="center_horizontal|top" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:id="@+id/linearLayout3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/dob"
            android:id="@+id/textVieweDob"
            android:textStyle="bold"
            android:padding="10sp"
            android:layout_gravity="center_horizontal|top" />

        <EditText
            android:id="@+id/editTextDD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginLeft="21dp"
            android:ems="2"
            android:hint="DD"
            android:maxLength="2"
            android:inputType="number"

            />
        <EditText
            android:id="@+id/editTextMM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginLeft="21dp"
            android:ems="2"
            android:hint="MM"
            android:maxLength="2"
            android:inputType="number"

            />
        <EditText
            android:id="@+id/editTextYY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginLeft="21dp"
            android:ems="4"
            android:hint="YYYY"
            android:maxLength="4"
            android:inputType="number"

            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:id="@+id/linearLayout5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/age"
            android:id="@+id/textVieweAge"
            android:textStyle="bold"
            android:padding="10sp"
            android:layout_gravity="center_horizontal|top" />

        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginLeft="26dp"
            android:hint="ex:23"
            android:inputType="number"
            android:ems="3"
            android:maxLength="2"

            />
    </LinearLayout>


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout7">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/des"
            android:id="@+id/textViewDes"
            android:textStyle="bold"
            android:padding="10sp"
           />


        <EditText
            android:id="@+id/editTextDes"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border"
            android:gravity="top|left"
            android:scrollHorizontally="false"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"
            android:lines="4"
            android:overScrollMode="always"
            android:padding="5dp"
            android:textSize="23sp"
            android:hint="Enter here .... "

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Next"
            android:layout_gravity="center_horizontal|center"
            />


</LinearLayout>

    </LinearLayout>
